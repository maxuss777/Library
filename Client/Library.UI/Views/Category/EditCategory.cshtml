@using System.Web.Mvc.Html
@model Library.UI.Models.Categories.Category
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="cart">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id)
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.CreationDate)

            <div class="form-group">
                @Html.LabelFor(model => model.Name)
                <div style="color: red;">
                    @Html.EditorFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>
            <div class="form-group">
                <div>
                    <input type="submit" value="Save" class="cart-button-create" />
                </div>
            </div>
        </div>
    }
    <div class="form-group">
        @using (Html.BeginForm("Delete", "Category", new { id = Model.Id }))
        {
            <input type="submit" value="Delete" class="button-delete" onclick=" return confirm('Are you sure you wish to delete this category?'); " />
        }
    </div>
</div>
