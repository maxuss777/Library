@using System.Web.Mvc.Html
@model System.Collections.Generic.IEnumerable<Library.UI.Models.Categories.Category>

@Html.ActionLink("Home", "GetAll", "Books", null, new { @class = "side-nav-button" })
@if (Model != null)
{
    foreach (var link in Model)
    {
        @Html.RouteLink(link.Name,
         new
         {
             controller = "Books",
             action = "GetFiltered",
             category = link.Name,
             page = 1
         },
         new { @class = "side-nav-button" })
    }
}