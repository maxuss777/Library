@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="cart">
    <div class="cart-item">
        <div>
            @using (Html.BeginForm("AddBook", "Category", new { categoryName = ViewBag.CurrentCategory }, FormMethod.Post))
            {
                
                @Html.DropDownList("bookId", (IEnumerable<SelectListItem>)ViewBag.Books, "-- Select book --")
                <input type="submit" value="Add" class="top-button-create-book" />
            }
        </div>
    </div>
    <div class="cart-item">
        <div>
            <ul>
                <li class="cart-item"> Sorry, there is no any book!</li>
            </ul>
        </div>
    </div>
</div>
