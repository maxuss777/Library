@model Library.UI.Models.Book

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="cart">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.Name)
                <div style="color: red;">
                    @Html.EditorFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ISBN)
                <div style="color: red;">
                    @Html.EditorFor(model => model.ISBN)
                    @Html.ValidationMessageFor(model => model.ISBN)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Author)
                <div style="color: red;">
                    @Html.EditorFor(model => model.Author)
                    @Html.ValidationMessageFor(model => model.Author)
                </div>
            </div>
        </div>

        <div class="form-group edit-form-button">
            <div>
                <input type="submit" value="Save" class="cart-button-create" />
            </div>
        </div>
    }
    <div class="form-group">
        @using (Html.BeginForm("Delete", "Books", new { id = Model.Id }))
        {
            <input type="submit" value="Delete" class="button-delete" onclick=" return confirm('Are you sure you wish to delete this book?'); " />
        }
    </div>
</div>